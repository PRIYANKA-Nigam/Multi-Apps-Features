<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="166dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="170dp"
        android:text="@string/dark"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="304dp"
        android:text="Switch" />

    <Button
        android:id="@+id/button2"
        android:layout_width="169dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="166dp"
        android:text="Track some Location"
        android:onClick="Track"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="169dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="104dp"
        android:onClick="display"
        android:text="GeoCode Your Location" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="64dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/button4"
        android:layout_width="163dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="230dp"
        android:onClick="share"
        android:text="SHARE" />

    <Button
        android:id="@+id/button5"
        android:layout_width="393dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="18dp"
        android:onClick="GenerateQR"
        android:text="Generate QR" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="154dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="353dp"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:onClick="ForRoomDB"
        android:text="For Room Db "
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="198dp"
        android:layout_height="136dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Notification"
        android:onClick="getNotified"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"
        android:onClick="GoogleCalendar"
        android:text="Google Calendar" />
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="183dp"
        android:background="@drawable/round_shape"
        android:elevation="8dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ll"
            android:layout_width="73dp"
            android:layout_height="79dp"
            android:layout_below="@+id/textView7"
            app:lottie_rawRes="@raw/rupee" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="41dp"
        android:layout_height="369dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="7dp"
        android:text="CALENDAR"
        android:onClick="newCalendar"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="170dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="27dp"
        android:text="Make Payment"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="MakePayment"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="100dp"
        android:text="REC"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:onClick="recycler"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="151dp"
        android:layout_height="131dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="15dp"
        android:onClick="seeAdapterPosition"
        android:text="Adapter Position"
        android:textStyle="bold"
        android:textSize="25dp"/>
</RelativeLayout>